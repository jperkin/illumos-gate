#
#	This Makefile defines the build rules for building inside of armv7 which
#	are shared across all of the boards.
#

$(OBJS_DIR)/%.o:	$(UTSBASE)/armv7/aboot/%.c
	$(COMPILE.c) -o $@ $<
	$(CTFCONVERT_O)

$(OBJS_DIR)/%.o:	$(UTSBASE)/armv7/aboot/%.s
	$(COMPILE.s) -o $@ $<

$(OBJS_DIR)/%.o:	$(UTSBASE)/armv7/misc/%.c
	$(COMPILE.c) -o $@ $<
	$(CTFCONVERT_O)
